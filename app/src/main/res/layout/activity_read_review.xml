<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop= "60dp"
        android:textSize = "35sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/leave_review"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:padding="5dp"
        android:text="Leave review"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="#0ED6B9"
        android:onClick="onClickLeaveReview"
        />

    <Button
        android:id="@+id/delete_review"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/leave_review"
        android:padding="5dp"
        android:text="Delete review"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="#0ED6B9"
        android:onClick="onClickDeleteReview"
        />

    <Button
        android:id="@+id/view_gallery"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/delete_review"
        android:padding="5dp"
        android:text="View image gallery"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="#0ED6B9"
        android:onClick="onClickViewGallery"
        />

    <TextView
        android:id="@+id/average_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop= "20dp"
        android:textSize = "30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/view_gallery"
        />

    <TextView
        android:id="@+id/num_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop= "20dp"
        android:textSize = "30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/average_reviews"
        />

    <TextView
        android:id="@+id/review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop= "10dp"
        android:textSize = "30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/num_reviews"
        android:text = "Reviews"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below= "@+id/review_title"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp">
        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop= "30dp"
                android:textSize = "20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:backgroundTint="#0ED6B9"
        android:onClick="onClickBack" />


</RelativeLayout>